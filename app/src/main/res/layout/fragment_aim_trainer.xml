<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/aim_start_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aim_trainer_header"
            android:fontFamily="@font/cairo_bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"/>

        <ImageView
            android:id="@+id/img_target_start_game"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/accuracy"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aim_trainer_game_description"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aim_remaining"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Remaining"
            android:textSize="28sp"
            android:fontFamily="@font/cairo_regular"/>

        <TextView
            android:id="@+id/text_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_regular" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aim_gameplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="120dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_target"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/accuracy"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aim_linear_game_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to hit 30 targets:"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/light_grey"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_time_aim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_regular"
            android:text="12.845 s"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average time per target:"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/light_grey"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_average_aim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_regular"
            android:text="422 ms"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_score_aim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/save_score"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_regular"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:text="@string/try_again"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_regular"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>