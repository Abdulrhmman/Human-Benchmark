            app:exitAnim="@anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/showScoresFragment"
        android:name="com.abdelrahmman.humanbenchmark.ui.ShowScoresFragment"
        android:label="ShowScoresFragment" >

        <action
            android:id="@+id/action_showScoresFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"/>

    </fragment>

</navigation>